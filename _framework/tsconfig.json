{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "esModuleInterop": true,
    "types": [ "node", "opencv-ts" ],
    "outDir": "wwwroot/js",
    //"outFile": "wwwroot/js/app.js",
    //"typeRoots": [ "./node_modules/opencv-ts" ],
    "lib": [ "es2017", "dom", "es2015.promise" ],
    "module": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "opencv-ts": [ "node_modules/opencv-ts/src/opencv" ]
    }
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  
}
